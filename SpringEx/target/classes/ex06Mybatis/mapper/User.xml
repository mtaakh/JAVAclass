<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 mapper 파일은 namespace에 지정한 인터페이스를 기반으로 제작된다. -->
<mapper namespace="ex07Login.IUser">
	<!-- 회원인증을 위한 쿼리를 실행할 때 사용할 메소드명(id)은 loginProcess, 반환타입(resultType): ex07Login.UserDTO -->
	<select id="loginProcess" resultType='ex07Login.UserDTO'>
		select * from member where id=#{param1} and pass=#{param2}
	</select>
</mapper>